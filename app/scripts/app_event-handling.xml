<application>
<name> event-rate-calculation </name>

<dependencies>
</dependencies>

<module>
    <name> yarpdataplayer </name>
    <parameters> </parameters>
    <node> localhost </node>
</module>

<module>
    <name> vPreProcess </name>
    <parameters> --flipx --flipy --temporalSize 250000 </parameters>
    <node> localhost </node>
</module>

<module>
    <name> tutorial_event-rate</name>
    <parameters> --name /vRate --period 0.1 </parameters>
    <node>localhost</node>
</module>

<module>
    <name>vFramer</name>
    <parameters> --displays "(0 /left (AE) 1 /right (AE))" --frameRate 20 </parameters>
    <node>localhost</node>
</module>

<module>
    <name>yarpview</name>
    <parameters>--name /view/left </parameters>
    <node>localhost</node>
</module>

<module>
    <name>yarpview</name>
    <parameters>--name /view/right </parameters>
    <node>localhost</node>
</module>

<module>
    <name>yarpscope</name>
    <parameters>--remote /vRate/rate:o --index "(0 1)" --color "(green blue)" --interval 200 </parameters>
    <node>localhost</node>
</module>

<connection>
    <from>/zynqGrabber/vBottle:o</from>
    <to>/vPreProcess/vBottle:i</to>
    <protocol>udp</protocol>
</connection>

<connection>
    <from>/vPreProcess/vBottle:o</from>
    <to>/vRate/vBottle:i</to>
    <protocol>udp</protocol>
</connection>

<connection>
    <from>/vPreProcess/vBottle:o</from>
    <to>/vFramer/AE:i</to>
    <protocol>udp</protocol>
</connection>

<connection>
    <from> /vFramer/left</from>
    <to> /view/left </to>
    <protocol>udp</protocol>
</connection>

<connection>
    <from> /vFramer/right</from>
    <to> /view/right </to>
    <protocol>udp</protocol>
</connection>


</application>
